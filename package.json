{
  "name": "@bscotch/bravo",
  "description": "Bravo is a Favro SDK by Butterscotch Shenanigans",
  "repository": "https://github.com/bscotch/favro-sdk",
  "homepage": "https://github.com/bscotch/favro-sdk#readme",
  "author": "Adam Coster",
  "keywords": [
    "favro",
    "api",
    "cli",
    "sdk",
    "project management"
  ],
  "version": "0.1.0",
  "engines": {
    "node": ">=14"
  },
  "main": "./build/index.js",
  "files": [
    "build/lib/**/*",
    "build/index.*",
    "build/types/**/*"
  ],
  "scripts": {
    "test": "npm run build && mocha --inspect --require source-map-support/register --bail --timeout 6000 ./build/test/",
    "build": "rimraf build && tsc && tsc-alias",
    "preversion": "npm run lint && npm run build && npm test",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && npm run format && git add -A",
    "postversion": "git push --follow-tags && npm publish",
    "lint": "eslint --ext ts,js --fix src",
    "format": "prettier src/**/*.ts -w",
    "build-live": "tsc -w && tsc-alias -w"
  },
  "license": "MIT",
  "dependencies": {
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "commander": "^8.0.0",
    "@types/chai": "^4.2.19",
    "@types/fs-extra": "^9.0.11",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.14.0",
    "@types/node-fetch": "^2.5.10",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "chai": "^4.3.4",
    "conventional-changelog-cli": "^2.1.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-plugin-prettier": "^3.4.0",
    "fs-extra": "^10.0.0",
    "mocha": "^9.0.1",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.19",
    "tsc-alias": "^1.3.5",
    "typescript": "^4.3.5"
  }
}
